<!DOCTYPE html>
<link rel="stylesheet" type="text/css" href="/css/styles.css">
<html>
	<head>
		<meta charset="utf-8">
	</head>
	<!-- Estilo y color del fondo -->
	<body style="background-color:#FFFFFF">
		<div class="login-form">
			<!-- Titulo de la pagina -->
			<h1>Login</h1>
			<!-- Admin login section -->
			<div>
				<h2>Login as Admin</h2>
				<form action="admin_auth" method="POST">
					<input type="text" name="admin_username" id="admin_username" placeholder="Admin Username" required>
					<input type="password" name="admin_password" id="admin_password" placeholder="Admin Password" required>
					<input type="submit" id="admin_login_button" value="Login as Admin">
				</form>
			</div>
			<!-- Employee login section -->
			<div style="margin-top: 20px;">
				<h2>Login as Employee</h2>
				<form action="employee_auth" method="POST">
					<input type="text" name="employee_username" id="employee_username" placeholder="Employee Username" required>
					<input type="password" name="employee_password" id="employee_password" placeholder="Employee Password" required>
					<input type="submit" id="employee_login_button" value="Login as Employee">
				</form>
			</div>
		</div>
	</body>
</html>
